<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="KjAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_lnull_bwhite_r8</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--普通垂直分割线-->
    <style name="divider_nomal_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_divider</item>
    </style>
    <style name="PopupTopRightAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <!--<item name="android:windowExitAnimation">@anim/pop_exit</item>-->
    </style>
    <!--普通水平分割线-->
    <style name="divider_nomal_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="font_blue_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_blue</item>
    </style>
    <style name="font_3_15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/font_3</item>
    </style>
    <style name="PopupTop2BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/spaner_enter</item>
        <item name="android:windowExitAnimation">@anim/spaner_exit</item>
    </style>

</resources>
