<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--右上角出来Popupwindow样式-->
    <style name="PopupTopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <!--<item name="android:windowExitAnimation">@anim/pop_exit</item>-->
    </style>


    <style name="PopupBottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_up</item>
        <item name="android:windowExitAnimation">@anim/menu_down</item>
    </style>

    <!--普通水平分割线-->
    <style name="divider_nomal_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_divider</item>
    </style>
    <!--普通黄色水平分割线-->
    <style name="divider_yellow_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_yellow</item>
    </style> <!--普通淡水平分割线-->
    <style name="divider_light_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_light</item>
    </style>

    <!--普通垂直分割线-->
    <style name="divider_light_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_light</item>
    </style>
    <!--普通标题水平分割线-->
    <style name="divider_title_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_title</item>
    </style>
    <!--pop水平分割线-->
    <style name="divider_pop_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_pop_divider</item>
    </style>
    <!--普通垂直分割线-->
    <style name="divider_nomal_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_divider</item>
    </style>
    <!--虚线垂直分割线-->
    <style name="divider_special_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/list_devider</item>
    </style>
    <!--对话框样式-->
    <style name="CustomAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_lnull_bwhite_r8</item>
    </style>
    <!--全屏对话框样式-->
    <style name="CustomFullAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_lnull_bwhite_r8</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_lnull_bwhite_r8</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <!-- 进度条对话框样式 -->
    <style name="dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/sharp_progress_dialog</item>
    </style>

    <style name="dialog_progress_all" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>


    <style name="AddressCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sel_cb_address</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="PopupScaleAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_scale_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_scale_exit</item>
    </style>
</resources>