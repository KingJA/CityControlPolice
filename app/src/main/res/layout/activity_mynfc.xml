<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@color/bg_transparent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="16dp"
    android:background="@color/bg_gray_kj"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="@drawable/shape_lgray1_bwhite_r5"
            android:orientation="vertical">

        <TextView
            style="@style/font_6_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_lgray1_bgray_r5"
            android:gravity="center"
            android:padding="12dp"
            android:text="请把证件放置设备上并保持不动，等待获取信息" />

            <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp">

            <TextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="卡号" />

            <TextView
                android:id="@+id/tv_card_no"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="" />
        </LinearLayout>

            <View style="@style/divider_special_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/tv_card"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="" />
            </LinearLayout>
            <View style="@style/divider_special_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="姓名:" />

            <TextView
                android:id="@+id/et_name"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="" />
        </LinearLayout>

            <View style="@style/divider_special_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="性别:" />

                <TextView
                    android:id="@+id/tv_gender"

                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="" />
            </LinearLayout>

            <View style="@style/divider_special_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="民族:" />

                <TextView
                    android:id="@+id/tv_nation"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="" />
            </LinearLayout>

            <View style="@style/divider_special_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="出生年月" />

                <TextView
                    android:id="@+id/tv_birthday"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="" />
            </LinearLayout>


            <View style="@style/divider_special_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="地址" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="" />
        </LinearLayout>

            <View style="@style/divider_special_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="签发机关" />

            <TextView
                android:id="@+id/tv_police"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="" />
        </LinearLayout>

            <View style="@style/divider_special_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="有效期" />

            <TextView
                android:id="@+id/tv_validity"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="" />
        </LinearLayout>

            <View style="@style/divider_special_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="DN码" />

            <TextView
                android:id="@+id/tv_dncode"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="" />
        </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            style="@style/btn_small_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="关闭" />
    </LinearLayout>
</ScrollView>