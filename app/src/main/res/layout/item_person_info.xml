<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_lgray1_bwhite_r5"
    android:orientation="vertical">

    <TextView
        style="@style/font_bold_6_12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_title_lgray1_bgray_r5"
        android:padding="12dp"
        android:text="人员信息" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            style="@style/font_9_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="姓名" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <TextView
                android:id="@+id/tv_outin_name"
                style="@style/font_3_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="周磊" />

            <ImageView

                android:id="@+id/iv_chang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_outin_name"
                android:background="@drawable/bg_chang"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_yao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_chang"
                android:background="@drawable/bg_yao"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_liu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_yao"
                android:background="@drawable/bg_liu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_zi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_yao"
                android:background="@drawable/bg_zi"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_lgreen_bwhite_r4"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="详情"
                android:textColor="@color/bg_green"
                android:textSize="12dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divider_nomal_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            style="@style/font_9_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="手机号码" />

        <TextView
            android:id="@+id/tv_info_phone"
            style="@style/font_3_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="18888888888" />

    </LinearLayout>

    <View style="@style/divider_nomal_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            style="@style/font_9_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="身份证号" />

        <TextView
            android:id="@+id/tv_info_card"
            style="@style/font_3_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="336512228821548744" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_wdj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_wdj"
                android:visibility="gone"

                />

            <ImageView
                android:id="@+id/iv_tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_tf"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_xj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_xj"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_tz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_tz"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_wgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_wgl"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>