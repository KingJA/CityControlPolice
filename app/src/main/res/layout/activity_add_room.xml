<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_edit_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray_kj"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_lgray1_bwhite_r5"
            android:orientation="vertical">

            <TextView
                style="@style/font_bold_6_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_title_lgray1_bgray_r5"
                android:padding="12dp"
                android:text="修改房间信息"/>


            <LinearLayout
                android:id="@+id/ll_room_no"
                style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="房间号"/>

                <EditText
                    android:hint="请输入房间号"
                    android:id="@+id/et_room_number"
                    style="@style/font_3_14"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="number"
                    android:maxLength="6"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="户型"
                    android:textColor="@color/font_9"/>

                <LinearLayout
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <EditText
                        android:id="@+id/et_room__shi"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="15sp"/>

                    <TextView
                        style="@style/font_3_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|right"
                        android:text="室"/>

                    <EditText
                        android:id="@+id/et_room_ting"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="15sp"/>

                    <TextView
                        style="@style/font_3_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|right"
                        android:text="厅"/>

                    <EditText
                        android:id="@+id/et_room_wei"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="15sp"/>

                    <TextView
                        style="@style/font_3_14"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|right"
                        android:text="卫"/>

                    <EditText
                        android:id="@+id/et_room_yangtai"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_edittext_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="15sp"/>

                    <TextView
                        style="@style/font_3_14"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|right"
                        android:text="阳台"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="面积(平米)"/>

                <EditText
                    android:hint="请输入房间面积"
                    android:id="@+id/et_room_area"
                    style="@style/font_3_14"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="number"
                    android:maxLength="6"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="租金(元/月)"/>

                <EditText
                    android:hint="请输入租金"
                    android:id="@+id/et_room_price"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_weight="2"
                    android:inputType="number"
                    android:maxLength="5"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="容纳人数"/>

                <EditText
                    android:hint="请输入容纳人数"
                    android:id="@+id/et_room_person"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_weight="2"
                    android:inputType="number"
                    android:maxLength="2"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="装修程度"/>

                <TextView
                    style="@style/font_3_14"
                    android:id="@+id/tv_fixture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付方式"/>

                <TextView
                    android:id="@+id/tv_deposit"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否自动发布"/>

                <android.support.v7.widget.SwitchCompat
                    android:layout_marginLeft="40dp"
                    android:id="@+id/sb_autoPublish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <LinearLayout style="@style/ll_padding12_orientation">

                <TextView
                    style="@style/font_9_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="发布信息标题"/>

                <EditText
                    android:hint="请输入标题"
                    android:id="@+id/et_publish_title"
                    style="@style/font_3_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_weight="2"/>
            </LinearLayout>

            <View style="@style/divider_nomal_horizontal"/>

            <RelativeLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    style="@style/font_9_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间图片"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_room"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/imageadd_on"/>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>

