<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_lgray_bwhite_r8"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            style="@style/font_tip_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="姓名：" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <TextView
                android:id="@+id/tv_info_name"
                style="@style/font_gray_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="周磊" />

            <ImageView

                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_chang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_info_name"
                android:background="@drawable/bg_chang" />

            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_yao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_chang"
                android:background="@drawable/bg_yao" />

            <ImageView
                android:id="@+id/iv_liu"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_yao"
                android:background="@drawable/bg_liu" />


            <TextView

                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_lgreen_bwhite_r4"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="详情"
                android:textColor="@color/green_kj"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divider_nomal_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            style="@style/font_tip_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="手机号码：" />

        <TextView

            android:id="@+id/tv_info_phone"
            style="@style/font_gray_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="18888888888" />

    </LinearLayout>

    <View style="@style/divider_nomal_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            style="@style/font_tip_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="身份证号：" />

        <TextView
            android:id="@+id/tv_info_card"
            style="@style/font_gray_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="336512228821548744" />
    </LinearLayout>




        <LinearLayout

            android:id="@+id/ll_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="26dp"

            >

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/iv_wdj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_wdj"
                />

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/iv_tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_tf"
               />

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/iv_xj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_xj"
              />

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/iv_tz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_tz"
                />

            <ImageView
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/iv_wgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_wgl"
                 />

        </LinearLayout>
</LinearLayout>