<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_lgray1px_bwhite_r0"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_outin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:text="姓名：" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <TextView
                android:id="@+id/tv_outin_name"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="周磊" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_outin_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_arrow_down" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/ll_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="身份证号：" />

            <TextView
                android:id="@+id/tv_outin_card"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="18888888888" />

        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="卡号：" />

            <TextView

                android:id="@+id/tv_outin_cardNo"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="336512228821548744" />

        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="卡类型：" />

            <TextView

                android:id="@+id/tv_outin_type"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="336512228821548744" />

        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="变化状态：" />

            <TextView

                android:id="@+id/tv_outin_changestate"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="增加" />

        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="时间：" />

            <TextView

                android:id="@+id/tv_outin_time"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="336512228821548744" />

        </LinearLayout>

        <!--    <View style="@style/divider_nomal_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    style="@style/font_tip_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="房间号：" />

                <TextView
                    android:id="@+id/tv_info_roomNo"
                    style="@style/font_gray_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="101" />
            </LinearLayout>-->
    </LinearLayout>
</LinearLayout>