<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_kj">

    <include layout="@layout/include_empty" />


    <ListView
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/lv_exist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="8dp"
        android:listSelector="#00000000" />


    <com.tdr.citycontrolpolice.view.KingJA_SwtichButton_Kj
        android:id="@+id/kj_switchbutton"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        app:leftSelBg="@drawable/switch_left_yellow_sel"
        app:leftNorBg="@drawable/switch_left_yellow_nor"
        app:rightSelBg="@drawable/switch_right_yellow_sel"
        app:rightNorBg="@drawable/switch_right_yellow_nor"
        app:leftText="入住"
        app:rightText="离开"
        app:textSel="@color/bg_white"
        app:textNor="@color/font_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>