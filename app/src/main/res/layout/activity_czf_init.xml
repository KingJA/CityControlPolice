<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bg_gray_kj"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="出租房信息"
            android:textSize="12dp" />

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="*地        址:" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_address"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请选择地址"
                android:paddingLeft="5dp" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/bg_search" />
        </LinearLayout>
        <View style="@style/divider_light_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="*出租房名:" />

            <EditText
                android:textCursorDrawable="@drawable/et_cursor"
                android:singleLine="true"
                android:id="@+id/et_czfName"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="辖区派出所:" />

            <EditText
                android:enabled="false"
                android:id="@+id/tv_police"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="*房屋类型:" />

            <EditText
                android:editable="false"
                android:id="@+id/tv_czfType"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />


        </LinearLayout>
        <View style="@style/divider_light_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="小区名称:" />

            <EditText
                android:singleLine="true"
                android:id="@+id/et_areaName"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/divider_light_horizontal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bg_gray_kj"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="房东信息"
            android:textSize="12dp" />

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="*姓名:" />

            <EditText
                android:enabled="false"
                android:singleLine="true"
                android:id="@+id/tv_ownerName"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="*身份证:" />

            <EditText
                android:enabled="false"
                android:singleLine="true"
                android:id="@+id/tv_ownerCard"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="5dp" />

            <ImageView
                android:id="@+id/iv_ownerNfc"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/nfc_on"
                android:visibility="gone" />

        </LinearLayout>

        <View style="@style/divider_light_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:orientation="horizontal">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_tip_14"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="*手机号:" />

            <EditText
                android:textCursorDrawable="@drawable/et_cursor"
                android:singleLine="true"
                android:id="@+id/et_ownerPhone"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray_kj"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="管理员信息"
                android:textSize="12dp" />

            <CheckBox
                android:id="@+id/cb_isOwern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="与房东同人"
                android:textColor="@color/bg_blue_light"
                android:textSize="12dp" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
            android:id="@+id/ll_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:orientation="horizontal">

                <com.tdr.citycontrolpolice.view.RequiredTextView
                    style="@style/font_tip_14"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="*姓名:" />

                <EditText
                    android:textCursorDrawable="@drawable/et_cursor"
                    android:singleLine="true"
                    android:id="@+id/et_adminName"
                    style="@style/font_content_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <View style="@style/divider_light_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:orientation="horizontal">

                <com.tdr.citycontrolpolice.view.RequiredTextView
                    style="@style/font_tip_14"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="*身份证:" />

                <EditText
                    android:textCursorDrawable="@drawable/et_cursor"
                    android:singleLine="true"
                    android:id="@+id/et_adminCard"
                    style="@style/font_content_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:paddingLeft="5dp" />

                <ImageView
                    android:id="@+id/iv_adminNfc"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/nfc_on"
                    android:visibility="gone" />

            </LinearLayout>

            <View style="@style/divider_light_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:orientation="horizontal">

                <com.tdr.citycontrolpolice.view.RequiredTextView
                    style="@style/font_tip_14"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="*手机号:" />

                <EditText
                    android:textCursorDrawable="@drawable/et_cursor"
                    android:singleLine="true"
                    android:id="@+id/et_adminPhone"
                    style="@style/font_content_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:hint="用户登录密码获取手机"
                    android:paddingLeft="5dp" />
            </LinearLayout>


        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bg_gray_kj"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="照片"
            android:textSize="12dp" />

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout
          android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_number"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_photo_number" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/iv_room"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_photo_room" />

        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />
        <Button
            android:id="@+id/btn_submit"
            style="@style/button_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginLeft="32dp"
           android:layout_marginRight="32dp"
           android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"

            android:text="提交" />

    </LinearLayout>

</ScrollView>