<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/shape_lgray1_bwhite_r5"
                  android:orientation="vertical">


        <TextView
            style="@style/font_bold_6_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_title_lgray1_bgray_r5"
            android:padding="12dp"
            android:text="修改密码"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="原密码"/>

            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_old_password"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@null"
                android:hint="请输入原密码"/>
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="新密码"/>

            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_new_password"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@null"
                android:hint="请输入新密码"/>
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">

            <com.tdr.citycontrolpolice.view.RequiredTextView
                style="@style/font_9_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="重复密码"/>

            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/et_repeat_password"
                style="@style/font_3_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@null"
                android:hint="请输入重复密码"/>
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/tv_confirm"
            style="@style/btn_small_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="提交"/>
    </LinearLayout>
</FrameLayout>