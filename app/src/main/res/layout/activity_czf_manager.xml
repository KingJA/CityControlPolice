<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_empty" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_initRoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="楼层："
                    android:textSize="16sp" />

                <EditText
                    android:numeric="integer"
                    android:id="@+id/et_init_floor"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:inputType="number"
                    android:maxLength="2" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:text="房间数："
                    android:textSize="16sp" />

                <EditText
                    android:numeric="integer"
                    android:maxLength="2"
                    android:id="@+id/et_init_room"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:inputType="number" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_init_house"
            style="@style/button_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="初始化房间" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <TextView
            style="@style/font_gray_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="房间" />

        <TextView
            android:gravity="center"
            style="@style/font_gray_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="授权/实际人数" />


    </LinearLayout>

    <View style="@style/divider_nomal_horizontal" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_czf_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_init"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/gray_divider"
            android:dividerHeight="1px"
            android:listSelector="#00000000">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
