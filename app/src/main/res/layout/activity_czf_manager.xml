<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_kj"
    android:orientation="vertical">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_initRoom"
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <View style="@style/divider_yellow_horizontal" />

        <TextView
            style="@style/font_yellow_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:background="@color/bg_yellow"
            android:gravity="center"
            android:padding="18dp"
            android:text="请添加楼层及房间进行初始化" />


        <View style="@style/divider_yellow_horizontal" />

        <ScrollView
                android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/ll_init_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_init_add"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_add" />

                <ImageView
                    android:id="@+id/iv_init_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"

                    android:background="@drawable/bg_reduce" />

                <Button
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@id/iv_init_add"
                    android:layout_toRightOf="@id/iv_init_delete"
                    android:id="@+id/btn_init_submit"
                    style="@style/button_16"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="提交" />


            </RelativeLayout>


        <!--    <View style="@style/divider_title_horizontal" />-->


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <TextView
            style="@style/font_title_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="房间" />

        <TextView
            style="@style/font_title_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="授权/实际人数" />


    </LinearLayout>

    <View style="@style/divider_nomal_horizontal" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_czf_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_init"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/gray_divider"
            android:dividerHeight="1px"
            android:listSelector="#00000000">

        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
