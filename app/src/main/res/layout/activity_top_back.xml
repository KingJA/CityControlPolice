<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_blue">

        <RelativeLayout
            android:id="@+id/rl_top_back_left"
            android:background="@drawable/sel_tr2half_kj"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/back" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_top_back_right"
            android:background="@drawable/sel_tr2half_kj"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/menu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_toLeftOf="@id/rl_top_back_right"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tv_top_back_title"
            style="@style/font_white_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_top_back_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>