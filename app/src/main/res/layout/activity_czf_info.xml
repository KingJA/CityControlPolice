<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--头部-->

    <include
        android:id="@+id/title_register"
        layout="@layout/layout_title"></include>


    <!--头像、手机等-->
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1175C1"
        android:orientation="horizontal"
        android:paddingRight="48dp"
        android:paddingLeft="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <com.tdr.citycontrolpolice.view.CircleImageView
            android:id="@+id/img_labdlord_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/icon_userinfo" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_labdlord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="房东姓名：天地人"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_labdlord_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="手机号码：13645876333"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_labdlord_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="标准地址：浙江省温州市鹿城区人民街道78号二楼"
                android:textColor="@color/white"

                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

    <com.tdr.citycontrolpolice.view.SimpleIndicatorLayout
        android:id="@+id/sil_czf_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:kjTabBgColor="@color/blue_light_kj"
        app:kjTabTextColor="@color/black_kj"
        app:kjTabTextSelColor="@color/blue_light_kj"
        app:kjVisibleCount="3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_czf_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
</LinearLayout>
