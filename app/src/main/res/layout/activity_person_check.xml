<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            style="@style/font_gray_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下信息通过蓝牙获取" />

        <ImageView
            android:layout_marginLeft="32dp"
            android:id="@+id/iv_bluetooth"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_bluetooth" />

    </LinearLayout>

    <View style="@style/divider_special_horizontal" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="身份证卡号" />

        <TextView
            android:id="@+id/tv_card_no"
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            style="@style/font_gray_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下信息通过相机获取" />

        <ImageView
            android:layout_marginLeft="32dp"
            android:id="@+id/iv_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_camera" />

    </LinearLayout>

    <View style="@style/divider_special_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="身份证号" />

        <TextView
            android:id="@+id/tv_card"
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="性别" />

        <TextView
            android:id="@+id/tv_gender"

            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="民族" />

        <TextView
            android:id="@+id/tv_nation"
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="出生" />

        <TextView
            android:id="@+id/tv_birthday"
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:text="地址" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/font_gray_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:background="@drawable/shape_lgray1_bwhite_r0"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/btn_submit"
            style="@style/button_18"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="提交" />
    </LinearLayout>

</LinearLayout>