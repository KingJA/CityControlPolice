<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_kj"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_lgray1_bwhite_r5"
        android:orientation="vertical">

        <TextView
            style="@style/font_bold_6_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_lgray1_bgray_r5"
            android:padding="12dp"
            android:text="修改房间信息" />


        <LinearLayout
            android:id="@+id/ll_room_no"
            style="@style/ll_padding12_orientation">

            <TextView
                style="@style/font_head_2"
                android:text="房间号" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_room_number"
                style="@style/font_content_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:inputType="number"
                />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout style="@style/ll_padding12_orientation">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="户型"
                android:textColor="@color/font_9" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8">

                <EditText
                    android:id="@+id/et_room__shi"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_edittext_selector"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="15sp" />

                <TextView
                    style="@style/font_3_14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:text="室" />

                <EditText
                    android:id="@+id/et_room_ting"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext_selector"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="15sp" />

                <TextView
                    style="@style/font_3_14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:text="厅" />

                <EditText
                    android:id="@+id/et_room_wei"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext_selector"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="15sp" />

                <TextView
                    style="@style/font_3_14"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:text="卫" />

                <EditText
                    android:id="@+id/et_room_yangtai"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext_selector"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="15sp" />

                <TextView
                    style="@style/font_3_14"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|right"
                    android:text="阳台" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout style="@style/ll_padding12_orientation">

            <TextView
                style="@style/font_head_2"
                android:text="面积" />

            <EditText
                android:gravity="center"
                android:id="@+id/et_room_area"
                style="@style/font_content_8"
                android:inputType="number"
                android:maxLength="6" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout style="@style/ll_padding12_orientation">

            <TextView
                style="@style/font_head_2"
                android:text="容纳人数" />

            <EditText
                android:gravity="center"
                android:id="@+id/et_room_person"
                style="@style/font_content_8"
                android:inputType="number"
                android:maxLength="2" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout style="@style/ll_padding12_orientation">

            <TextView
                style="@style/font_head_2"
                android:text="装修程度" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_room_renovation"
                style="@style/font_content_8" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

        <LinearLayout style="@style/ll_padding12_orientation">

            <TextView
                style="@style/font_head_2"
                android:text="支付方式" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_room_payment"
                style="@style/font_content_8" />
        </LinearLayout>

        <View style="@style/divider_nomal_horizontal" />

      <!--  <LinearLayout
            android:id="@+id/ll_room_photo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_fg"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="图片"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/img_room_info_add"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:src="@mipmap/imageadd_on" />
        </LinearLayout>-->

        <!--<com.tdr.citycontrolpolice.view.NoScrollGridView-->
            <!--android:id="@+id/gv_room_info"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:horizontalSpacing="1dp"-->
            <!--android:numColumns="4"-->
            <!--android:verticalSpacing="1dp" />-->

        <TextView
            android:id="@+id/tv_room_submit"
            style="@style/btn_nomal_blue"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:enabled="false"
            android:text="提交" />

    </LinearLayout>
</LinearLayout>

